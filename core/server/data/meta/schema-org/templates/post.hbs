{
    "@context": "https://schema.org",
    "@type": "Article",
    "publisher": {
        "@type": "Organization",
        "name": "{{site.title}}",
        "logo": {{site.logo}}
    },
    author: {
        "@type": "Person",
        name: "{{author.name}}",
        image: {{author.image}},
        url: "{{author.url}}",
        sameAs: "{{author.sameAs}}",
        description: "{{author.description}}"
    },
    headline: "{{meta.title}}",
    url: "{{meta.url}}",
    datePublished: "{{meta.datePublished}}",
    dateModified: "{{meta.dateModified}}",
    image: {{meta.image}},
    keywords: "{{meta.keywords}}",
    description: "{{meta.description}}",
    mainEntityOfPage: {
        @type: "WebPage",
        @id: {{site.url}},
    }
}
